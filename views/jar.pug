extends layout

block content
  h1= title
  -let results=[{material:"plastic",cost:135,colour:"white"},{material:"steel",cost:100,colour:"blue"},{material:"rubber",cost:198,colour:"red"}]
    
    div(class="container-fluid")
    div(class="row")
        each item,index in results
            div(class="col-sm-2" onclick=`buy(${index})`)
                p material:  #{item.material}
                p colour: #{item.colour}
                p cost: #{item.cost}
                
    script.
      function buy(index)
      {
        alert(`You purchased item ${index+1}.`)
      }